---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div id={`modal-${id}`} class="modal" aria-hidden="true">
  <div class="modal-overlay"></div>
  <div class="modal-container">
    <div class="modal-content">
      <button class="modal-close" aria-label="Close modal">×</button>
      <div class="modal-body"></div>
    </div>
  </div>
</div>

<style>
.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  overflow-y: auto;
}

.modal[aria-hidden="false"] {
  display: block;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1001;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600px;
  max-height: 90vh;
  z-index: 1002;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal[aria-hidden="false"] .modal-container {
  animation: slideDown 0.4s ease;
}

@keyframes slideDown {
  from { 
    transform: translate(-50%, -60%);
    opacity: 0;
  }
  to { 
    transform: translate(-50%, -50%);
    opacity: 1;
  }
}

.modal-content {
  background-color: white;
  border: 4px solid black;
  box-shadow: var(--shadow);
  width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
}

.modal-body {
  padding: 2rem;
}

.modal-close {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 2.2rem;
  background: black;
  color: white;
  width: 40px;
  height: 40px;
  border: 3px solid black;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  font-weight: bold;
  z-index: 1003;
  line-height: 1;
  padding-bottom: 4px;
  transition: all 0.2s ease;
}

.modal-close:hover {
  background: white;
  color: black;
  transform: translate(-2px, -2px);
  box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.8);
}

.modal-details {
  margin-top: 1.5rem;
  padding-top: 1rem;
  border-top: 2px dashed rgba(255, 255, 255, 0.3);
}

.modal-details h4 {
  font-size: 1.3rem;
  font-weight: 700;
  margin-bottom: 1rem;
  text-transform: uppercase;
}

.modal-details ul {
  list-style: none;
  padding: 0;
}

.modal-details li {
  padding: 0.4rem 0;
  font-size: 1.1rem;
  position: relative;
  padding-left: 1.5rem;
}

.modal-details li:before {
  content: "→";
  position: absolute;
  left: 0;
  top: 0.4rem;
  font-weight: bold;
}

#modal-tile-1 .modal-content {
  background-color: var(--custom-software-bg);
  color: var(--text-light);
}

#modal-tile-2 .modal-content {
  background-color: var(--tile2-bg);
  color: var(--text-light);
}

#modal-tile-3 .modal-content {
  background-color: var(--tile3-bg);
  color: var(--text-light);
}

@media (max-width: 768px) {
  .modal-container {
    width: 95%;
  }
}
</style>