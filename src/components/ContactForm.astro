<div class="form-container">
  <form id="contactForm">
    <div class="form-group">
      <input type="text" id="name" name="name" placeholder="Name" required>
    </div>
    <div class="form-group">
      <input type="email" id="email" name="email" placeholder="Email" required>
    </div>
    <div class="form-group">
      <textarea id="message" name="message" placeholder="Message" required></textarea>
    </div>
    <button type="submit" class="btn">Send Message</button>
  </form>
  
  <div id="toast" class="toast">Message sent successfully!</div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const toast = document.getElementById('toast');
    
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(form);
      const name = formData.get('name');
      const email = formData.get('email');
      const message = formData.get('message');
      
      // Prepare data for FormSubmit
      const data = {
        name: name,
        email: email,
        message: message,
        _subject: "New contact from Timothy Technologies website",
        _captcha: "false"
      };
      
      try {
        // Send the form data to FormSubmit
        const response = await fetch('https://formsubmit.co/timsidie@gmail.com', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify(data)
        });
        
        // Show toast message
        toast.classList.add('show');
        
        // Hide toast after 3 seconds
        setTimeout(() => {
          toast.classList.remove('show');
        }, 3000);
        
        // Reset form
        form.reset();
        
      } catch (error) {
        console.error('Error submitting form:', error);
        alert('There was an error sending your message. Please try again.');
      }
    });
  });
</script>

<style>
.form-container {
  position: relative;
  width: 100%;
}

form {
  width: 100%;
}

.form-group {
  margin-bottom: 1.2rem;
}

input, textarea {
  width: 100%;
  padding: 1rem;
  border: 3px solid black;
  font-size: 1rem;
  background-color: rgba(255, 255, 255, 0.8);
  color: black;
}

input::placeholder, textarea::placeholder {
  color: rgba(0, 0, 0, 0.7);
}

input:focus, textarea:focus {
  outline: none;
  background-color: rgba(255, 255, 255, 1);
}

textarea {
  min-height: 150px;
}

.toast {
  position: fixed;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%) translateY(100px);
  background-color: #32CD32;
  color: white;
  padding: 15px 25px;
  border-radius: 5px;
  font-weight: bold;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 1000;
}

.toast.show {
  transform: translateX(-50%) translateY(0);
  opacity: 1;
}
</style>