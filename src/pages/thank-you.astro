---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You | Timothy Technologies">
  <div class="main-container">
    <div class="thank-you-tile">
      <h1>Thank You!</h1>
      <p>Your message has been sent successfully. We'll get back to you as soon as possible.</p>
      <a href="/" class="btn">Return to Home</a>
    </div>
  </div>
</Layout>

<style>
.main-container {
  max-width: 1400px;
  margin: 2rem auto;
  padding: 0 2rem;
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}

.thank-you-tile {
  grid-column: 1 / -1;
  background-color: var(--hero-bg);
  color: var(--text-light);
  padding: 3rem;
  border: 4px solid black;
  box-shadow: var(--shadow);
  position: relative;
  text-align: center;
}

.thank-you-tile h1 {
  margin-bottom: 1rem;
}

.thank-you-tile p {
  margin-bottom: 2rem;
  font-size: 1.2rem;
}

@media (max-width: 768px) {
  .main-container {
    padding: 0 1rem;
  }
}
</style>